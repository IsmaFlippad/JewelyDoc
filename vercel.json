{
  "builds": [
    {
      "src": "app/api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "npm install --legacy-peer-deps && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/app/api/$1",
      "headers": {
        "Access-Control-Allow-Origin": "https://www.jewely.fr",
        "Access-Control-Allow-Methods": "POST, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-WPDS-Operation"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/build/$1"
    }
  ]
}